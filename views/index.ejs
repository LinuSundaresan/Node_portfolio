<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1><%= name %></h1>
        <h2><%= role %></h2>
    </header>
    <section>
        <h3>Projects</h3>
        <ul>
            <% projects.forEach(project => { %>
                <li>
                    <h4><%= project.name %></h4>
                    <p><%= project.description %></p>
                    <a href="<%= project.link %>">View Project</a>
                </li>
            <% }); %>
        </ul>
    </section>
</body>
</html>
